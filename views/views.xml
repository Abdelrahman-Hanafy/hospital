<odoo>
  <data>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hospital_action_window">
      <field name="name">hospital main window</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">tree,form</field>
      <field name="context"> {'default_isPatient': True}</field>
      <field name="domain"> [('isPatient', '=', true)] </field>
    </record>
    <record model="ir.actions.act_window" id="guarantor_request_action_window">
      <field name="name">Guarantor Request</field>
      <field name="res_model">guarantor.request</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="hospital" id="hospital.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Admission" id="hospital_admission_menu" parent="hospital.menu_root" action="hospital_action_window"/>
    <menuitem name="Requests" id="guarantor_request_menu" parent="hospital.menu_root" action="guarantor_request_action_window"/>

  </data>
</odoo>
